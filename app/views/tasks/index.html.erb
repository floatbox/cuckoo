
<h1>New Tasks</h1>
<% if @current_user %>
  <h2><%= @current_user[:name] %> <a href="/auth/logout">Logout</a></h2>
<% else %>
  <h2><a href="/auth/redbooth">Sign in with Redbooth</a></h2>
<% end %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.author %></td>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at.strftime('%F %T') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

